{
    "name": "kotlin-formatter",
    "displayName": "Kotlin Formatter",
    "description": "Format your Kotlin code easily",
    "version": "0.0.9",
    "engines": {
        "vscode": "^1.60.0"
    },
    "publisher": "cstef",
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:kotlin-formatter.formatKotlin",
        "onLanguage:kotlin",
        "onLanguage:kotlinscript"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "kotlin-formatter.formatKotlin",
                "title": "Format Kotlin"
            }
        ],
        "configuration": [
            {
                "title": "Kotlin Formatter",
                "properties": {
                    "kotlin-formatter.ktlintPath": {
                        "type": [
                            "string",
                            "null"
                        ],
                        "default": null,
                        "description": "Path to the ktlint JAR file"
                    }
                }
            }
        ]
    },
    "icon": "icon/icon.jpg",
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile && yarn run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/vscode": "^1.60.0",
        "@types/glob": "^7.1.3",
        "@types/mocha": "^8.2.2",
        "@types/node": "14.x",
        "eslint": "^7.27.0",
        "@typescript-eslint/eslint-plugin": "^4.26.0",
        "@typescript-eslint/parser": "^4.26.0",
        "glob": "^7.1.7",
        "mocha": "^8.4.0",
        "typescript": "^4.3.2",
        "vscode-test": "^1.5.2"
    },
    "repository": {
        "url": "https://github.com/cstefFlexin/kotlin-formatter.git"
    }
}
